<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Schedueler</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="calendar">
      {{#driver}}
      <h5>{{name}}</h5>
      {{/driver}}

      {{^driver}}
      <div class="driver-selection">
        <label for="drivers">Driver:</label>
        <select name="drivers" id="drivers">
            {{#drivers}}
            <option value="{{id}}" >{{name}}</option>
            {{/drivers}}
        </select>
      </div>
      {{/driver}}
      <header>
        <div class="month-picker">
          <button id="today-btn">Today</button>
          <div class="prev-week" id="prev-week">&lt</div>
          <div class="next-week" id="next-week">&gt</div>
          <div class="month" id="month"></div>    
        </div>
        <div style="flex-grow: 1;"></div>
        <button id="download-btn">View Driver Report</button>
      </header>
      <div id="day-grid" class="day-grid"></div>
    </div>
    <div class="open-chat-button"><img id="msg-bubble" src="/msgbbl.svg" alt="message bubble"></div>
    {{>chatbox}}
    {{>downloadForm}}
    {{>popupForm}}
    {{>conflictPopup}}
    <script src="/js/chat.js"></script>
    <script src="/js/index.js"></script>
</body>
</html>