<div class="form-popup hidden" id="popup-task-form">
    
  <form id="task-container" class="task-container" >
      <h1>Add Task</h1>
      <label><strong>Date</strong></label>
      <div id="date-text" class="date-text"></div>
      <label><strong>Time</strong></label>
      <div id="task-time" class="task-time">12:00</div>
      <label for="timeInterval">Time Interval</label>
      <input type="number" id="timeInterval" name="timeInterval" min="1" max="24">
      <br>
      <label><b>Location</b></label>
      <input type="text" class="location" id="location" name="location" placeholder="Toronto">
      <p>Task:</p>
      <input type="radio" id="pickup" name="taskOption" value="Pickup">
      <label for="pickup">Pick Up</label><br>
      <input type="radio" id="dropoff" name="taskOption" value="Dropoff">
      <label for="dropoff">Drop Off</label><br>
      <input type="radio" id="other" name="taskOption" value="Other">
      <label for="other">Other</label>
      <label for="description" id="description" name="description">Description</label>
      <input type="text" name="description" class="task-description" id="taskDescription">
      <button type="button" id="delete-btn" class="hidden">Delete</button>
      <button type="submit" id="submit-btn" class="submitbtn">Add Task</button>
      <button type="button" id="cancel-btn" class="btn cancel">Cancel</button>
    </form>
  </div>